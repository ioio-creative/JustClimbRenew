<UserControl x:Class="JustClimbTrial.Views.UserControls.HeaderRowNavigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JustClimbTrial.Views.UserControls"
             mc:Ignorable="d"             
             d:DesignHeight="90" d:DesignWidth="960"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ControlTemplate x:Key="btnRecordDemoVideoTemplate">
            <Button x:Name="btnRecordDemoVideo"
                    Background="Transparent" BorderBrush="Transparent"
                    Command="{Binding BtnRecordDemoVideoCommand}"
                    Visibility="{Binding BtnRecordDemoVideoVisibility}"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,0">
                <Image Source="/Resources/Images/btn1_record demo.png" />
            </Button>
        </ControlTemplate>
        <ControlTemplate x:Key="btnCancelRecordDemoVideoTemplate">
            <Button x:Name="btnCancelRecordDemoVideo"
                    Content="Cancel Record Demo"
                    Command="{Binding BtnCancelRecordDemoVideoCommand}"
                    Visibility="{Binding BtnRecordDemoVideoVisibility}" />
        </ControlTemplate>
    </UserControl.Resources>
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Button x:Name="btnStaffOptions" 
                Grid.Column="0" VerticalAlignment="Bottom"
                Background="Transparent" BorderBrush="Transparent"
                PreviewMouseDown="btnStaffOptions_PreviewMouseDown" Margin="0,0,0,0">
            <Image Source="/Resources/Images/btn1_JC Logo - General.png" />
        </Button>

        <Button x:Name="btnRescanWall"
                Grid.Column="1" VerticalAlignment="Bottom"
                Background="Transparent" BorderBrush="Transparent"             
                Visibility="{Binding StaffOptionsVisibility}">
            <Image Source="/Resources/Images/btn1_Rescan - General.png" 
               Margin="10,0,10,5" />
        </Button >
        
        <Button x:Name="btnRouteSet"
                Grid.Column="2" VerticalAlignment="Bottom"
                Background="Transparent" BorderBrush="Transparent"
                Visibility="{Binding StaffOptionsVisibility}">
            <Image Source="/Resources/Images/btn1_Route Set - General.png" 
                    Margin="10,0,10,5" />
        </Button>

        <Control x:Name="ctrlSwitchDemoMode"
                 Grid.Column="3"
                 Visibility="{Binding StaffOptionsVisibility}" />

        <TextBlock x:Name="lbTitle"
            Grid.Column="4" 
            Text="{Binding HeaderRowTitle}">
        </TextBlock>
        <Button x:Name="btnHome" 
            Grid.Column="5">
            <Image Source="/Resources/Images/btn1_Home - General.png" />
        </Button>
    </Grid>
</UserControl>
