<UserControl x:Class="JustClimbTrial.Views.UserControls.HeaderRowNavigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JustClimbTrial.Views.UserControls"
             mc:Ignorable="d"             
             d:DesignHeight="90" d:DesignWidth="960"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             Loaded="UserControl_Loaded">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Button x:Name="btnStaffOptions" 
                Grid.Column="0" VerticalAlignment="Bottom"
                Background="Transparent" BorderBrush="Transparent"
                PreviewMouseDown="btnStaffOptions_PreviewMouseDown" Margin="0,0,0,0">
            <Image Source="/Resources/Images/btn1_JC Logo - General.png" />
        </Button>

        <Button x:Name="btnRescanWall"
                Grid.Column="1" VerticalAlignment="Bottom"
                Background="Transparent" BorderBrush="Transparent"             
                Visibility="{Binding StaffOptionsVisibility}">
            <Image Source="/Resources/Images/btn1_Rescan - General.png" 
               Margin="10,0,10,5"/>
        </Button >
        <!--<Image Source="/Resources/Images/btn1_Rescan - General.png" 
               Grid.Column="1" Margin="10,0,10,5"
               VerticalAlignment="Bottom"
               Visibility="{Binding StaffOptionsVisibility}"/>-->
        <Button x:Name="btnRouteSet" Content="Route Set" 
                Grid.Column="2" Opacity="0"
                Visibility="{Binding StaffOptionsVisibility}"/>
        <Image Source="/Resources/Images/btn1_Route Set - General.png" 
               Grid.Column="2" Margin="10,0,10,5"
               VerticalAlignment="Bottom"
               Visibility="{Binding StaffOptionsVisibility}"/>
        
        <Button x:Name="btnRecordDemoVideo" Content="Record Demo"
                    Grid.Column="3" Opacity="0"
                    Visibility="{Binding BtnRecordDemoVideoVisibility}" />
        <Image Source="/Resources/Images/btn1_record demo.png" 
               Grid.Column="3" Margin="10,0,10,9"
               VerticalAlignment="Bottom"
               Visibility="{Binding BtnRecordDemoVideoVisibility}"/>
        
        <StackPanel x:Name="panelStaffOptions" Grid.Column="4"
                    Orientation="Horizontal"
                    Visibility="{Binding StaffOptionsVisibility}">
            
            <Button x:Name="btnCancelRecordDemoVideo"
                    Content="Cancel Record Demo"
                    Visibility="{Binding BtnRecordDemoVideoVisibility}" />
        </StackPanel>
        
        <TextBlock x:Name="lbTitle"
            Grid.Column="4" 
            Text="{Binding HeaderRowTitle}">
        </TextBlock>
        <Button x:Name="btnHome" 
            Grid.Column="5">
            <Image Source="/Resources/Images/btn1_Home - General.png" />
        </Button>
    </Grid>
</UserControl>
